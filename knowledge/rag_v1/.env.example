# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.siliconflow.cn/v1
# 模型配置
EMBEDDING_MODEL=BAAI/bge-m3

# 仅用于query测试，这里实际上只用测试到召回，可以不配置。配置的话和OPENAI API访问同样的服务
CHAT_MODEL=deepseek-ai/DeepSeek-R1-0528-Qwen3-8B

# ChromaDB 配置（嵌入式模式）
CHROMA_COLLECTION_NAME=docs

# 应用配置
LOG_LEVEL=INFO

# RAG 配置
TOP_K=5
SIMILARITY_THRESHOLD=0.3
MAX_CHUNK_SIZE=2000
CHUNK_OVERLAP=100
CHUNKING_STRATEGY=structure

# 混合检索配置
# 检索策略: vector（向量检索）或 hybrid（混合检索）
RAG_STRATEGY=vector
# 融合模式: reciprocal_rank（互序排名）或 relative_score（相对评分）
FUSION_MODE=reciprocal_rank
# 向量检索的top_k数量
VECTOR_TOP_K=5
# BM25检索的top_k数量
BM25_TOP_K=5